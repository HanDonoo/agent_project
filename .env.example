# One NZ Employee Finder Agent - Environment Variables
# Copy this file to .env and configure as needed

# Database
DATABASE_PATH=data/employee_directory.db

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# CORS (comma-separated origins)
ALLOWED_ORIGINS=*

# Privacy & RAI
SESSION_TIMEOUT_MINUTES=60
ENABLE_QUERY_LOGGING=True
ANONYMIZE_LOGS=True

# Agent Settings
MAX_RECOMMENDATIONS=10
MIN_CONFIDENCE_SCORE=0.3
AVERAGE_TIME_SAVED_MINUTES=39.3

# AI & LLM Settings
USE_AI_ROUTING=True          # Enable intelligent routing (recommended)
ENABLE_LLM=False             # Enable LLM for query understanding (requires API key or local LLM)

# LLM Provider (choose "openai" or "local")
LLM_PROVIDER=openai

# OpenAI Settings (if using OpenAI)
OPENAI_API_KEY=              # Your OpenAI API key (leave empty to disable)
OPENAI_MODEL=gpt-3.5-turbo   # or gpt-4, gpt-4-turbo, etc.
OPENAI_BASE_URL=https://api.openai.com/v1

# Local LLM Settings (if using Ollama, LocalAI, etc.)
LOCAL_LLM_ENDPOINT=http://localhost:11434/v1
LOCAL_LLM_MODEL=llama2       # or mistral, codellama, etc.

# Logging
LOG_LEVEL=INFO

